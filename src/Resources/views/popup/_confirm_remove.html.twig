<div id="{{ id }}" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title">{{ 'lleattachment.confirmWindow.titleMessage'|trans }}</h2>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>{{ 'lleattachment.confirmWindow.bodyMessage'|trans }}</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success" id="{{ id }}-delete">{{ 'lleattachment.confirmWindow.confirm'|trans }}</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">{{ 'lleattachment.confirmWindow.close'|trans }}</button>
            </div>
        </div>
    </div>
</div>